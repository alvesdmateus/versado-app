# Server
PORT=3000
NODE_ENV=development
API_URL=http://localhost:3000

# Database (Docker Compose runs PostgreSQL on port 5433)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/versado

# Auth
JWT_SECRET=your-jwt-secret-min-32-characters-long

# Frontend URL (for CORS + email links)
WEB_URL=http://localhost:5173

# Stripe (required — get keys from https://dashboard.stripe.com)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRODUCT_ID_FLUENT=prod_...

# OpenAI (required — for AI card generation)
OPENAI_API_KEY=sk-...

# Resend (optional — for email verification + password reset)
RESEND_API_KEY=re_...

# Cloudflare Turnstile (optional — CAPTCHA on register/forgot-password)
TURNSTILE_SECRET_KEY=

# Google OAuth (optional — for "Sign in with Google")
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
