{
  "name": "@versado/api",
  "version": "0.1.8",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "start:prod": "bun run db:migrate && bun run start",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/db/seed.ts"
  },
  "dependencies": {
    "@versado/algorithms": "workspace:*",
    "@versado/auth": "workspace:*",
    "@versado/core": "workspace:*",
    "@versado/validation": "workspace:*",
    "bcrypt": "^5.1.1",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.6.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^6.22.0",
    "postgres": "^3.4.0",
    "resend": "^6.9.2",
    "stripe": "^17.0.0",
    "web-push": "^3.6.7",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/web-push": "^3.6.4",
    "drizzle-kit": "^0.30.0",
    "typescript": "^5.3.3"
  }
}
